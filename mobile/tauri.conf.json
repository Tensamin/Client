{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "tensamin",
  "version": "0.1.37",
  "identifier": "net.tensamin.client",
  "build": {
    "frontendDist": "../web/out",
    "devUrl": "http://localhost:3000/",
    "beforeDevCommand": "cd ../web && bun run dev",
    "beforeBuildCommand": "cd ../web && bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "zoomHotkeysEnabled": false,

        "title": "Tensamin",
        "width": 854,
        "height": 480,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "deb", "rpm", "msi", "nsis"],
    "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
